{% set LICENSE_MANAGER_IMAGE = LICENSE_MANAGER_DOCKER_IMAGE or LICENSE_MANAGER_BUILT_IMAGE %}
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: license-manager
  labels:
    app.kubernetes.io/name: license-manager
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: license-manager
  template:
    metadata:
      labels:
        app.kubernetes.io/name: license-manager
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
      containers:
        - name: license-manager
          image: {{ LICENSE_MANAGER_IMAGE }}
          ports:
            - containerPort: 8000
          env:
            - name: DJANGO_SETTINGS_MODULE
              value: license_manager.settings.tutor.production
            - name: CELERY_BROKER_TRANSPORT
              value: redis
            - name: CELERY_BROKER_HOSTNAME
              value: "{{ REDIS_HOST }}:{{ REDIS_PORT }}"
            - name: CELERY_BROKER_VHOST
              value: "0"
            - name: CELERY_BROKER_USER
              value: ""
            - name: CELERY_BROKER_PASSWORD
              value: "{{ REDIS_PASSWORD }}"
          volumeMounts:
            - mountPath: /openedx/license_manager/license_manager/settings/tutor/production.py
              name: settings
              subPath: production.py
          securityContext:
            allowPrivilegeEscalation: false
      volumes:
        - name: settings
          configMap:
            name: license-manager-settings
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: license-manager-worker
  labels:
    app.kubernetes.io/name: license-manager-worker
spec:
  selector:
    matchLabels:
      app.kubernetes.io/name: license-manager-worker
  template:
    metadata:
      labels:
        app.kubernetes.io/name: license-manager-worker
    spec:
      securityContext:
        runAsUser: 1000
        runAsGroup: 1000
      containers:
        - name: license-manager-worker
          image: {{ LICENSE_MANAGER_IMAGE }}
          command:
            - /bin/bash
            - -c
            - >-
              dockerize -wait tcp://{{ MYSQL_HOST }}:{{ MYSQL_PORT }} -timeout 20s &&
              celery -A license_manager worker --loglevel=info --hostname=license-manager-worker@%h
              --queues=license_manager.default,license_manager.bulk_enrollment
          env:
            - name: DJANGO_SETTINGS_MODULE
              value: license_manager.settings.tutor.production
            - name: CELERY_BROKER_TRANSPORT
              value: redis
            - name: CELERY_BROKER_HOSTNAME
              value: "{{ REDIS_HOST }}:{{ REDIS_PORT }}"
            - name: CELERY_BROKER_VHOST
              value: "0"
            - name: CELERY_BROKER_USER
              value: ""
            - name: CELERY_BROKER_PASSWORD
              value: "{{ REDIS_PASSWORD }}"
          volumeMounts:
            - mountPath: /openedx/license_manager/license_manager/settings/tutor/production.py
              name: settings
              subPath: production.py
          securityContext:
            allowPrivilegeEscalation: false
      volumes:
        - name: settings
          configMap:
            name: license-manager-settings
