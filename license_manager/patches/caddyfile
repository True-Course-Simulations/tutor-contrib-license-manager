# license_manager service
{{ LICENSE_MANAGER_HOST }}{$default_site_port} {
    request_body {
        max_size 10MB
    }

    # 1) Redirect ONLY "/" to /login (SSO entry)
    @root path /
    redir @root /login 302

    # 2) If Django bounced /admin â†’ /admin/login?next=/admin/
    #    send them through SSO instead of showing the local admin login page.
    @adminLoginSSO {
        path /admin/login
        query next=/admin/
    }
    redir @adminLoginSSO /login?next=/admin/ 302

    # 3) Everything else goes straight to license-manager (including /admin, /admin/login without next, APIs)
    import proxy "license-manager:8000"
}